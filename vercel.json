{
    "crons": [
        {
            "path": "/api/cron",
            "schedule": "0 9 * * *"
        },
        {
            "path": "/api/update_news",
            "schedule": "0 9,13,18 * * *"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}